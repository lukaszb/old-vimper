" Linux specific VIM settings

set guifont=Liberation\ Mono\ 9

" Tabs like in TextMate (but with ALT key)
map <A-1> :tabn 1<CR>
map <A-2> :tabn 2<CR>
map <A-3> :tabn 3<CR>
map <A-4> :tabn 4<CR>
map <A-5> :tabn 5<CR>
map <A-6> :tabn 6<CR>
map <A-7> :tabn 7<CR>
map <A-8> :tabn 8<CR>
map <A-9> :tabn 9<CR>

map <A-t> :tabnew<CR>

